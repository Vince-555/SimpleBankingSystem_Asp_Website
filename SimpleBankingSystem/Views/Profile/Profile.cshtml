@model ProfileViewModel
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Profile</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i">
    <link rel="stylesheet" href="/fonts/fontawesome-all.min.css">
    <link rel="stylesheet" href="/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="/fonts/fontawesome5-overrides.min.css">
    <link rel="stylesheet" href="/css/Popup-Element-Overlay-1.css">
    <link rel="stylesheet" href="/css/Popup-Element-Overlay.css">
</head>

<body id="page-top">
    <div id="wrapper">
        <nav class="navbar navbar-dark align-items-start sidebar sidebar-dark accordion bg-gradient-primary p-0">
            <div class="container-fluid d-flex flex-column p-0">
                <a class="navbar-brand d-flex justify-content-center align-items-center sidebar-brand m-0" href="#">
                    <div class="sidebar-brand-icon rotate-n-15"><i class="fas fa-money-bill-wave"></i></div>
                    <div class="sidebar-brand-text mx-3">
                        <span>SBS</span>
                        <p style="font-size: 9px;">simple banking system</p>
                    </div>
                </a>
                <hr class="sidebar-divider my-0">
                <ul class="navbar-nav text-light" id="accordionSidebar">
                    <li class="nav-item"><a class="nav-link" href="/home/index"><i class="fas fa-tachometer-alt"></i><span>Dashboard</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/transaction/all"><i class="fa fa-line-chart"></i><span>Transactions</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/card/allcards"><i class="fa fa-credit-card-alt"></i><span>Cards</span></a></li>
                    <li class="nav-item"><a class="nav-link active" href="/profile/profile/"><i class="fas fa-user"></i><span>Profile</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/news/news"><i class="fa fa-newspaper-o"></i><span>News</span></a></li>
                </ul>
                <div class="text-center d-none d-md-inline"><button class="btn rounded-circle border-0" id="sidebarToggle" type="button"></button></div>
            </div>
        </nav>
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                <nav class="navbar navbar-light navbar-expand bg-white shadow mb-4 topbar static-top">
                    <div class="container-fluid">
                        <button class="btn btn-link d-md-none rounded-circle mr-3" id="sidebarToggleTop" type="button"><i class="fas fa-bars"></i></button>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" href="/needhelp/chat" target="popup" onclick="window.open('/needhelp/chat', 'popup', 'width=600,height=400'); return false">
                                    <br>Need help ?<br><br>
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav flex-nowrap ml-auto">
                            <li class="nav-item dropdown d-sm-none no-arrow">
                                <a class="dropdown-toggle nav-link" aria-expanded="false" data-toggle="dropdown" href="#"></a>
                                <div class="dropdown-menu dropdown-menu-right p-3 animated--grow-in" aria-labelledby="searchDropdown">
                                    <form class="form-inline mr-auto navbar-search w-100">
                                        <div class="input-group">
                                            <input class="bg-light form-control border-0 small" type="text" placeholder="Search for ...">
                                            <div class="input-group-append"><button class="btn btn-primary py-0" type="button"><i class="fas fa-search"></i></button></div>
                                        </div>
                                    </form>
                                </div>
                            </li>
                            <div class="d-none d-sm-block topbar-divider"></div>
                            <li class="nav-item dropdown no-arrow">
                                <div class="nav-item dropdown no-arrow">
                                    <a class="dropdown-toggle nav-link" aria-expanded="false" data-toggle="dropdown" href="#"><span class="d-none d-lg-inline mr-2 text-gray-600 small">@Model.UserNavbarModel.FirstName @Model.UserNavbarModel.LastName</span><img class="border rounded-circle img-profile" src="@Model.UserNavbarModel.PhotoUrl"></a>
                                    <div class="dropdown-menu shadow dropdown-menu-right animated--grow-in">
                                        <a class="dropdown-item" href="/profile/profile"><i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>&nbsp;Profile</a>
                                        <div class="dropdown-divider"></div><a class="dropdown-item" href="/user/logout"><i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>&nbsp;Logout</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
                <div class="container-fluid">
                    <h3 class="text-dark mb-4">Profile</h3>
                    @{ Html.RenderPartial("_SuccessErrorPartial", Model.SuccessOrError); }
                    <div class="row mb-3">
                        <div class="col-lg-4">
                            <div class="card mb-3">
                                <div class="card-body text-center shadow">
                                    <img class="rounded-circle mb-3 mt-4" src="@Model.UserNavbarModel.PhotoUrl" width="160" height="160">
                                    <div class="mb-3">
                                        <form action="/profile/changephoto" method="post"><input class="form-control" type="url" placeholder="Enter new photo URL here" id="newPhotoUrl" name="photoUrl" required><button class="btn btn-primary btn-sm" type="submit" style="margin-top: 17px;">Change Photo</button></form>
                                    </div>
                                </div>
                            </div>
                            <div class="card shadow mb-4">
                                <form action="/profile/changepassword" method="post" style="padding-right: 20px;padding-left: 20px;">
                                    <p class="text-primary m-0 font-weight-bold" style="padding-top: 11px;">Change Password</p>
                                    <label style="padding-top: 8px;margin-bottom: 1px;" name="currentPassword">Enter current password:</label>
                                    <input class="form-control" type="password" name="currentPassword" required minlength="6">
                                    <label style="padding-top: 8px;margin-bottom: 1px;">Enter new password:</label>
                                    <input class="form-control" type="password" name="newPassword" required minlength="6">
                                    <label style="margin-bottom: 1px;padding-top: 8px;">Repeat new password:</label>
                                    <input class="form-control" type="password" name="repeatPassword" required minlength="6">
                                    <button class="btn btn-primary" type="submit" style="margin-top: 15px;margin-bottom: 35px;margin-right: 0px;margin-left: 16px;height: 36px;">Change Password</button>
                                </form>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="card shadow mb-3">
                                    <div class="card-header py-3">
                                        <p class="text-primary m-0 font-weight-bold">User Settings</p>
                                    </div>
                                    <div class="card-body">
                                        <form action="/profile/changeusersettings" method="post">
                                            <div class="form-row">
                                                <div class="col">
                                                    <div class="form-group"><label for="email"><strong>Email Address</strong></label><input class="form-control" type="email" id="email" placeholder="@Model.Email" name="email"><p>You will be logged out after changing your email !!!</p></div>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="col">
                                                    <div class="form-group"><label for="first_name"><strong>First Name</strong></label><input class="form-control" type="text" id="firstName" placeholder="@Model.UserNavbarModel.FirstName" name="firstName" minlength="2" maxlength="30"></div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group"><label for="last_name"><strong>Last Name</strong></label><input class="form-control" type="text" id="lastName" placeholder="@Model.UserNavbarModel.LastName" name="lastName" minlength="2" maxlength="30"></div>
                                                </div>
                                            </div>
                                            <div class="form-group"><button class="btn btn-primary btn-sm" type="submit">Save Settings</button></div>
                                        </form>
                                    </div>
                                </div>
                                <div class="card shadow">
                                    <div class="card-header py-3">
                                        <p class="text-primary m-0 font-weight-bold">Contact Settings</p>
                                    </div>
                                    <div class="card-body">
                                        <form action="/profile/changeaddress" method="post">
                                            <div class="form-group">
                                            <label for="address"><strong>Address</strong></label>
                                            <input class="form-control" type="text" id="address" placeholder="@Model.Address" name="address" required minlength="5" maxlength="150">
                                            </div>
                                            <div class="form-row">
                                                <div class="col">
                                                    <div class="form-group"><label for="city"><strong>City</strong></label><input class="form-control" type="text" id="city" placeholder="@Model.City" name="city" required minlength="2" maxlength="20"></div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group"><label for="country"><strong>Country</strong></label><input class="form-control" type="text" id="country" placeholder="@Model.Country" name="country" required></div>
                                                </div>
                                            </div>
                                            <div class="form-group"><button class="btn btn-primary btn-sm" type="submit">Save&nbsp;Settings</button></div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <footer class="bg-white sticky-footer">
                <div class="container my-auto">
                    <div class="text-center my-auto copyright"><span>Copyright © SBS @DateTime.UtcNow.Year</span></div>
                </div>
            </footer>
        </div> 
    </div>
    
    <a class="border rounded d-inline scroll-to-top" href="#page-top"><i class="fas fa-angle-up"></i></a>
    <script src="/js/jquery.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.js"></script>
    <script src="/js/Popup-Element-Overlay.js"></script>
    <script src="/js/theme.js"></script>
</body>

</html>
